  flags:
  - create
  with_legacy: true
- name: bluestore_min_alloc_size_ssd
  type: size
  level: advanced
  desc: Default min_alloc_size value for non-rotational (solid state)  media
  default: 4_K
  see_also:
  - bluestore_min_alloc_size
  flags:
  - create
  with_legacy: true
- name: bluestore_use_optimal_io_size_for_min_alloc_size 
