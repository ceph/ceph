;		   /dev/disk/by-path/pci-0000:05:01.0-scsi-7:0:0:0 \
;		   /dev/disk/by-path/pci-0000:05:02.0-scsi-0:0:0:0 \
;		   /dev/disk/by-path/pci-0000:05:02.0-scsi-1:0:0:0 \
