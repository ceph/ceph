# {{ cephadm_managed }}
server:
  http_listen_port: 9080
  grpc_listen_port: 0

positions:
  filename: /tmp/positions.yaml

clients:
  - url: http://{{ client_hostname }}:3100/loki/api/v1/push

scrape_configs:
- job_name: system
  static_configs:
  - labels:
      job: Cluster Logs
      __path__: /var/log/ceph/**/*.log