# Runs a 4k random write test against the ceph KeyValueStore.
[global]
ioengine=libfio_ceph_objectstore.so # must be found in your LD_LIBRARY_PATH

conf=ceph-kvstore.conf # must point to a valid ceph configuration file
directory=/mnt/fio-kvstore # directory for osd_data

rw=randwrite
iodepth=16

time_based=1
runtime=20s

[kvstore]
nr_files=32
size=2g
bs=4k
